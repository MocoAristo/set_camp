<% if @items.present? %>
<table class="table table-hover">
    <thead>
        <tr>
          <th>Img</th>
          <th>ProductName</th>
          <th>makerName</th>
          <th>brandName</th>
          <th>Review</th>
          <th>Url</th>
        </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= image_tag(item['mediumImageUrl'], style: "width: 100px;height: 100px;display: inline-block;") %></td>
          <td><%= item['productName'] %></td>
          <td><%= item['makerName'].present? ? item['makerName'] : '-' %></td>
          <td><%= item['brandName'] %></td>
          <td><%= item['reviewAverage'] %></td>
          <td><%= link_to 'キャンプアイテムに追加', camp_camp_items_path(name: item['productName'], image_url: item['mediumImageUrl'], maker_name: item['makerName'], camp_id: @camp.id), method: :post %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<% end %>
