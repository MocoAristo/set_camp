<% if @camp.images.present? %>
  <div class="row">
    <% @camp.images.each do |image| %>
      <div class="col-md-3 col-sm-6">
        <div class="image-box">
            <%= link_to camp_path(camp_id: @camp.id, image_id: image.id),
                        method: :patch, class: 'picture_delete_button', style: "display: none;" do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="red" class="bi bi-x-square" viewBox="0 0 16 16" >
  <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
  <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
</svg>
            <%end%>
          <%= image_tag image.variant(gravity: :center, resize: "200x200^", crop:"200x200+0+0"), class: "img-thumbnail mb-3" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
