<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <a href="/" class="brand-link">
    <%= image_tag 'takibee_icon', class: 'brand-image img-circle elevation-3' %>
    <span class="brand-text font-weight-light">TAKIBee.</span>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
      <% if current_user.avatar.present? %>
        <%= link_to user_path(current_user) do %>
          <%= image_tag current_user.avatar, class: 'img-circle elevation-2' %>
        <% end %>
      <% end %>
      </div>
      <div class="info">
        <a class="d-block"><%= link_to current_user.name , user_path(current_user) %></a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item">
          <%= link_to user_every_camp_index_path(current_user), class: "nav-link" do %>
            <i class="nav-icon fas fa-hiking"></i>
            <p>
              みんなのキャンプ
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to camps_path, class: "nav-link" do %>
            <i class="nav-icon fas fa-map-signs"></i>
            <p>
              マイキャンプ
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to user_items_path, class: "nav-link" do %>
            <i class="nav-icon fas fa-campground"></i>
            <p>
              マイアイテム
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to user_path(current_user), class: "nav-link" do %>
            <i class="nav-icon far fa-user"></i>
            <p>
              プロフィール
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to logout_path, method: :delete, class: "nav-link" do %>
            <i class="nav-icon fas fa-home"></i>
            <p>
              ログアウト
            </p>
          <% end %>
        </li>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>