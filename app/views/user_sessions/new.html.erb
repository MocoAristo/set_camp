<% set_meta_tags title: "#{t '.title'}" %>
<% content_for(:title, "#{t '.title'}") %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with url: login_path, method: :post, local:true do |f| %>
        <div class="form-group">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <input type="text" name="email" id="email" value="" class="form-control" />
        </div>
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <input type="password" name="password" id="password" value="" class="form-control" />
        </div>
        <div>
        <%= check_box_tag :remember, params[:remember], true %>
        <%= label_tag :remember, ' 次回から自動でログインする' %>
        </div>
        <%= link_to 'パスワードを忘れた方はこちら', new_password_reset_path, class: 'text-warning'  %>
        <div class="actions mt-3">
          <%= f.submit (t 'defaults.login'), class: 'btn btn-outline-warning' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to '新規登録', new_user_path, class: 'btn btn-outline-warning' %>
      </div>
    </div>
  </div>
</div>
